<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_details"
    app:startDestination="@id/empty_dest">

    <fragment
        android:id="@+id/empty_dest"
        android:name="com.pobochii.someapp.userdetails.EmptyFragment"
        android:label="@string/app_name" />

    <fragment
        android:id="@+id/user_details_dest"
        android:name="com.pobochii.someapp.userdetails.UserDetailsFragment"
        android:label="@string/user"
        tools:layout="@layout/user_details_fragment">
        <argument
            android:name="userId"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>

    <action
        android:id="@+id/global_to_user_details"
        app:destination="@id/user_details_dest"
        app:enterAnim="@anim/slide_in_from_right"
        app:exitAnim="@anim/slide_out_to_left"
        app:popEnterAnim="@anim/slide_in_from_left"
        app:popExitAnim="@anim/slide_out_to_right">
        <argument
            android:name="userId"
            app:argType="integer"
            app:nullable="false" />
    </action>
</navigation>